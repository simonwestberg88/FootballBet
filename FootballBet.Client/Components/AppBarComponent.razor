@inject NavigationManager NavigationManager
<MudAppBar Bottom="true" Fixed="true" Color="Color.Primary" Elevation="1">
    <MudContainer Style="display: flex; flex-direction: row; justify-content: space-around; align-items: center">
        <MudText>@Stats</MudText>
        <MudIconButton @onclick="NavigateToMyGroups" Icon="@Icons.Sharp.SportsSoccer" Size="Size.Large" Color="Color.Tertiary"/>
        <LoginDisplay/>
    </MudContainer>
</MudAppBar>

@code {
    [Parameter]
    public string? Stats { get; set; }

    private void NavigateToMyGroups()
    {
        NavigationManager.NavigateTo($"/");
    }
}