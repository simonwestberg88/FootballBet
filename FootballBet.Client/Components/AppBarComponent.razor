@using FootballBet.Shared.Models.Stats
@inject NavigationManager NavigationManager
<MudAppBar Bottom="true" Fixed="true" Color="Color.Primary" Elevation="1">
    <MudContainer Style="display: flex; flex-direction: row; justify-content: space-around; align-items: center">
        @if (Stats.HasValue)
        {
            <MudTooltip Text="Bet stats Exact/Base/Losses">
                <MudText>@($"{Stats.Value.Balance:0}  {Stats.Value.ExactWins}/{Stats.Value.BaseWins}/{Stats.Value.Losses}")</MudText>
            </MudTooltip>
        }
        <MudIconButton @onclick="NavigateToMyGroups" Icon="@Icons.Sharp.SportsSoccer" Size="Size.Large" Color="Color.Tertiary"/>
        <LoginDisplay/>
    </MudContainer>
</MudAppBar>

@code {

    [Parameter]
    public BetStatsDto? Stats { get; set; }

    private void NavigateToMyGroups()
    {
        NavigationManager.NavigateTo($"/");
    }

}