@inherits LayoutComponentBase
@inject NavigationManager navigationManager

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudMainContent Class="pt-0">
        <article class="content px-4">
            @Body
        </article>
    </MudMainContent>
    <MudAppBar Bottom="true" Fixed="true" Color="Color.Primary" Elevation="1">
        <MudSpacer />
        <MudSpacer />
        <MudSpacer />
        <MudIconButton @onclick="NavigateToMyGroups" Icon="@Icons.Sharp.SportsSoccer" Size="Size.Large" Color="Color.Secondary" />
        <MudSpacer />
        <MudSpacer />
        <LoginDisplay />
    </MudAppBar>
</MudLayout>

@code {
    private bool _isDarkMode = true;
    private MudTheme _theme = new();

    private void NavigateToMyGroups()
    {
        navigationManager.NavigateTo($"/");
    }
}